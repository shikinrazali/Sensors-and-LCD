#include <DHT.h>
#include <LiquidCrystal_I2C.h>
#define DHT11_PIN D4 // The ESP8266 pin D4 connected to DHT11 sensor 
#define AO_PIN    A0 

LiquidCrystal_I2C lcd(0x27, 16, 2);  // I2C address 0x27 (from DIYables LCD), 16 column and 2 rows
DHT dht11(DHT11_PIN, DHT11);

void setup() {
  dht11.begin();
  lcd.init();         // Initialize the LCD I2C display
  lcd.backlight();    // open the backlight
}

void loop() {
  int humid = dht11.readHumidity();
  int temp = dht11.readTemperature();
  int rain = analogRead(A0);
  bool light = digitalRead(D7);

  rain = map(rain, 0, 1023, 100, 0);//Converts the rainfall value from 0 to 100

   // check whether the reading is successful or not
  if (isnan(temp) || isnan(humid)) {
    lcd.setCursor(0, 0);
    lcd.print("Failed");
  } else {
    lcd.setCursor(0, 0);  // display position
    lcd.print("T: ");
    lcd.print(temp);     // display the temperature
    lcd.print(char(223));
    lcd.print("C");

    lcd.setCursor(0, 1);  // display position
    lcd.print("H: ");
    lcd.print(humid);      // display the humidity
    lcd.print("%");

    lcd.setCursor(8,0);
    lcd.print(" R: ");
    lcd.print(rain);
    lcd.print(" ");

    if(light == 1){
        lcd.setCursor(9,1);
        lcd.print("L: ");
        lcd.print("High");
        lcd.print(" ");
   } else if(light == 0){
        lcd.setCursor(9,1);
        lcd.print("L: ");
        lcd.print("Low");
        lcd.print(" ");
   }
  }

  // wait a 2 seconds between readings
  delay(2000);
}
