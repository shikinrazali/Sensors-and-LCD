#include <DHT.h>
#include <LiquidCrystal_I2C.h>
#define DHT11_PIN D4 // The ESP8266 pin D4 connected to DHT11 sensor 
#define AO_PIN    A0 

LiquidCrystal_I2C lcd(0x27, 16, 2);  // I2C address 0x27 (from DIYables LCD), 16 column and 2 rows
DHT dht11(DHT11_PIN, DHT11);

void setup() {
  dht11.begin();
  lcd.init();         // Initialize the LCD I2C display
  lcd.backlight();    // open the backlight
}

void loop() {
  float humid = dht11.readHumidity();
  float temp = dht11.readTemperature();
  int rain = analogRead(A0);
  bool l = digitalRead(D0);

  rain = map(rain, 0, 1023, 0, 100);//Converts the rainfall value from 0 to 100

  void LDRsensor(){
     bool light = digitalRead(light);
     if(light == 0){
        WidgetLED LED(V3);
        LED.on();
        lcd.setCursor(9,1);
        lcd.print("L: ");
        lcd.print("High");
        lcd.print(" ");
   } else if(light == 1){
        WidgetLED LED(V3);
        LED.off();
        lcd.setCursor(9,1);
        lcd.print("L: ");
        lcd.print("Low");
        lcd.print(" ");
   }

  
  // check whether the reading is successful or not
 if (isnan(temp) || isnan(humid)) {
    lcd.setCursor(0, 0);
    lcd.print("Failed");
  } else {
    lcd.setCursor(0, 0);  // display position
    lcd.print("T:");
    lcd.print(temp);     // display the temperature
    lcd.print(char(223));
    lcd.print("C");

    lcd.setCursor(0, 1);  // display position
    lcd.print("H:");
    lcd.print(humid);      // display the humidity
    lcd.print("%");

    lcd.setCursor(10,0);
    lcd.print(" R:");
    lcd.print(rain);
    lcd.print(" ");

  }

  // wait a 2 seconds between readings
  delay(2000);
}

